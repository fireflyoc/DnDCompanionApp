<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp"
    android:background="@drawable/parchment">

    <!--Use  this layout for the main content-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:columnCount="1"
        android:rowCount="2"

        >


        <TableRow

            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/menu_icon_2" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight=".75"
                android:columnCount="1"
                android:rowCount="2">

                <TableRow android:layout_gravity="center">

                    <TextView

                        android:id="@+id/charNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="CHARACTER NAME"
                        android:textAlignment="center"
                        android:textSize="25sp" />
                </TableRow>

                <TableRow android:layout_gravity="center">

                    <TextView

                        android:id="@+id/charClassTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="Class1, Class2, Class3"
                        android:textAlignment="center"
                        android:textSize="20sp" />
                </TableRow>


            </GridLayout>

        </TableRow>


        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="1">

                <!-- Side bar menu -->
                <ListView
                    android:id="@+id/charStatsListView"
                    android:layout_height="75dp"
                    android:layout_gravity="start"
                    android:layout_rowWeight=".25"
                    android:choiceMode="singleChoice"
                    android:divider="@android:color/black" />

                <TextView

                    android:id="@+id/charStatsListView2"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_rowWeight=".75"
                    android:choiceMode="singleChoice"
                    android:divider="@android:color/black"

                    />


            </GridLayout>

        </TableRow>


    </GridLayout>
    <!-- Side bar menu -->
    <ListView
        android:id="@+id/char_sheet_menu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#888"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent" />

</android.support.v4.widget.DrawerLayout>